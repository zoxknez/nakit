generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JewelryPiece {
  id               String              @id @default(cuid())
  categoryKey      String              // "necklaces", "bracelets", "statement"
  mediaUrls        String[]            // Array of Vercel Blob URLs
  publishedLocales String[]            @default([]) // ["sr", "ru", "en"]
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  translations     JewelryTranslation[]

  @@index([categoryKey])
}

model JewelryTranslation {
  id           String       @id @default(cuid())
  pieceId      String
  locale       String       // "sr", "ru", "en"
  title        String
  description  String       @db.Text
  categoryName String       // Translated category name
  piece        JewelryPiece @relation(fields: [pieceId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([pieceId, locale])
  @@index([locale])
}
